[
  {
    "label": "Compile Document",
    "command": "typst",
    "args": [ "c", "--root", ".", "$ZED_FILE" ],
    "allow_concurrent_runs": false
  },
  {
    "label": "Watch Document",
    "command": "typst",
    "args": [ "w", "--root", ".", "$ZED_FILE" ],
    "allow_concurrent_runs": false
  },
  {
    "label": "Run Python Script",
    "command": "python",
    "args": [ "$ZED_FILE" ],
    "shell": {
      "with_arguments": {
        "program": "/usr/bin/env",
        "args": [ "bash" ]
      }
    }
  }
]
